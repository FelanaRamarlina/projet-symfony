{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/fosuser.css') }}"
{% endblock %}
{% block content %}
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
<div class="col-sm">
      
    </div>
<div class="col-sm">
<form action="{{ path("fos_user_security_check") }}" class="page-form" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

     <div class="interactive-label">
    <input class="form-control" type="text" id="username" name="_username" placeholder="Nom d'utilisateur" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
   <div class="interactive-label">
    <input class="form-control" type="password" id="password" name="_password" placeholder="Mot de passe" required="required" autocomplete="current-password" />
    </div>
    <div class="interactive-label">
    <input  type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <p class="action">
    <input class="round-btn form-btn action-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </p>
</form>
</div>
<div class="col-sm">
     
    </div>
</div>
{% endblock %}
